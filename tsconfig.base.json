{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@pza/restify": ["libraries/restify/src/index.ts"],
      "@pza/types": ["libraries/types/src/index.ts"]
    },
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
